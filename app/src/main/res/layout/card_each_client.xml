<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="@color/colorPrimary"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/cardtv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saif Ullah"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textStart"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentStart="true"
                    android:id="@+id/cardtv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+8801835559161"
                    android:textSize="15sp" />

                <TextView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/cardtvmode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/cardtv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ss-expnet-1"
                android:textSize="15sp"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/cardtv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KHARULIA"
                android:textSize="15sp"
                android:textAlignment="textStart"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_calendar_today_24"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:id="@+id/cardExpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expire Date"
                        android:textStyle="bold"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_marginStart="10dp"
                        android:id="@+id/cardMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_baseline_access_time_24"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:id="@+id/cardTaketime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take Time"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="textStart"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>