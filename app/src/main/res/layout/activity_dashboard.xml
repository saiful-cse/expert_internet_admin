<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard.Dashboard">

    <LinearLayout
        android:id="@+id/dashinfolayout"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/activity_backround">
            <TextView
                android:layout_marginStart="30dp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="17sp" />

            <TextView
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="17sp" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerPkgRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/dashboard_total_expired_client"
            android:background="@color/activity_backround"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            />

    <LinearLayout
        android:background="@color/activity_backround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/dashboard_active"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/dashboard_inactive"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>

    <LinearLayout
        android:background="@color/activity_backround"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/dashboard_mon_credit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/dashboard_mon_debit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>

        <LinearLayout
            android:background="@color/activity_backround"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/dashboard_mon_service"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/dashboard_mon_bill"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                />

        </LinearLayout>

    <TextView
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/dashboard_profit"
        android:background="@color/activity_backround"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        />

    </LinearLayout>

</LinearLayout>